{
  "name": "simple-translator",
  "version": "2.0.0",
  "description": "Simple client-side translation with pure JavaScript.",
  "main": "dist/translator.js",
  "module": "src/translator.js",
  "scripts": {
    "prebuild": "rm -rf dist/",
    "build": "npm-run-all --parallel build:*",
    "build:prod": "webpack --mode production --output-filename translator.min.js",
    "build:dev": "webpack",
    "dev": "webpack --watch",
    "lint": "eslint src/*.js",
    "format": "prettier src/*.js --write",
    "validate": "npm-run-all --parallel format lint build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andreasremdt/simple-translator.git"
  },
  "keywords": [
    "translator",
    "tanslation",
    "i18n"
  ],
  "files": [
    "dist/"
  ],
  "author": "Andreas Remdt <me@andreasremdt.com> (https://andreasremdt.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/andreasremdt/simple-translator/issues"
  },
  "homepage": "https://github.com/andreasremdt/simple-translator#readme",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "eslint": "^7.4.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run validate"
    }
  }
}
